<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <div class="form-check">
      <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" <%= "checked" if task.completed %>>
      <label class="form-check-label" for="flexCheckDefault">
      </label>
      </div>
  <%= link_to task.title, task_path(task) %> - <%= link_to task_path(task), data: { turbo_method: :delete, turbo_confirm: "Sur ?" } do %>
  <i class="fa-solid fa-trash"></i>
  <% end %>
  </li>
  <% end %>
</ul>

<%= link_to "Add a new task", new_task_path %>
